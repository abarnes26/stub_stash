<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ShowTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Lobster|Patua+One|Quicksand" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="nav-bar">
      <div class="nav-bar-title">
        <% if current_user %>
        <div class="nav-bar-link">
          <%= link_to "Stub Stash", user_shows_path, class: "title-link" %>
        </div>
        <div class="nav-bar-link">
          <%= link_to "Artists", user_artists_path, class: "normal-link" %>
        </div>
        <div class="nav-bar-link">
          <%= link_to "Venues", venues_path, class: "normal-link" %>
        </div>
        <% else %>
        <div class="nav-bar-link">
          <%= link_to "Stub Stash", root_path, class: "title-link" %>
        </div>
        <% end %>
      </div>
      <div class="nav-bar-session-container">
        <% if current_user %>
          <div class="nav-bar-link">
            <%= link_to "Log out", logout_path, class: "normal-link" %>
          </div>
        <% else %>
          <div class="nav-bar-link">
            <%= link_to "Log In", login_path, class: "normal-link" %>
          </div>
          <div class="nav-bar-link">
            <%= link_to "Sign Up", new_user_path, class: "normal-link" %>
          </div>
        <% end %>
      </div>
    </div>

    <% flash.each do |type, message| %>
      <%= content_tag :div, message.html_safe, class: "flash-message" %>
    <% end %>

    <%= yield %>
    <div class="jambase-attribution-container">
      <div class="jambase-attribuiton">
      <h4>Stub Stash is Powered By <a href="http://www.JamBase.com" target="_top" title="JamBase Concert Search">
          <img src= "http://images.jambase.com/logos/jambase140x70.gif" alt="Search JamBase Concerts" border="0" /></a></h4>
        </div>
    </div>
  </body>
</html>
